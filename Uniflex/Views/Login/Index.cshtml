@model I_HUB.Model.Users.UserLogin

@{
    ViewBag.Title = "Login";
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title | Monitoring Building</title>
    <link rel="icon" type="image/png" href="~/Images/icon/favicon.jpg" sizes="32x32" />
    <link rel="stylesheet" href="~/Content/Font-Awesome/css/all.min.css">

    <link href="~/Content/Login.css" type="text/css" rel="stylesheet" />
    <script src="~/Scripts/jquery-3.6.0.min.js" type="text/javascript"></script>
    <script src="~/Scripts/login.js" type="text/javascript"></script>
    <script src="~/Scripts/TweenMax.min.js" type="text/javascript"></script>

    <!-- Theme style -->
    <link rel="stylesheet" href="~/Content/bootstrap.min.css" type="text/css" />
    <link rel="stylesheet" href="~/adminlte/css/adminlte.min.css" />
    <link rel="stylesheet" href="~/adminlte/css/adminlte.pages.min.css" />

</head>


<body>

    <div id="login-button">
        <img src="~/Images/Default/logo.png" alt="Logo Pelindo" />
    </div>

    <div id="container" class="text-center">
        <div class="login-box">
            <div class="login-logo">
                <img style="width:70%;height:70%;" src="https://eoffice.ilcs.co.id/p2b/upload/logo_white.png">
                @*<img style="width:70%;height:70%;" src="~/Images/Default/logo_white.png">*@
            </div>
            <!-- /.login-logo -->

            <div class="card">
                <div class="card-header bg-transparent border-bottom-0">
                    <button type="button" class="close close-btn" aria-label="Close">
                        <span aria-hidden="true">
                            <img src="~/Images/Default/details_close.png" alt="close" />
                        </span>
                    </button>
                </div>
                <div class="card-body login-card-body">
                    <p class="login-box-msg">Building Monitoring System</p>
                        @if (!string.IsNullOrWhiteSpace(ViewBag.ValidationResult))
                        {
                        <div class="login_message">
                            @ViewBag.ValidationResult 
                        </div>    
                            <script type="text/javascript">
                                $('#login-button').fadeOut("slow", function () {
                                    $("#container").fadeIn();
                                    TweenMax.from("#container", .4, { scale: 0, ease: Sine.easeInOut });
                                    TweenMax.to("#container", .4, { scale: 1, ease: Sine.easeInOut });
                                });
                            </script>
                        }
                            @using (Html.BeginForm("index", "Login", FormMethod.Post))
                            {
                                @Html.AntiForgeryToken()
                                <div class="form-group row mb-1">
                                    <label style="font-size:80%" class="control-label col-sm-4 col-form-label text-left text-sm-left" for="txtterminal">User Name</label>
                                    <div class="col-sm-12">
                                        <div class="input-group">
                                            @Html.TextBoxFor(m => m.UserID, new { @placeholder = "Username", @class = "form-control", @autofocus = "autofocus", @required = "required" })
                                            <div class="input-group-append">
                                                <div class="input-group-text">
                                                    <svg viewBox="0 0 24 24" width="18" height="18" stroke="currentColor" stroke-width="2"
                                                         fill="none" stroke-linecap="round" stroke-linejoin="round" class="css-i6dzq1">
                                                        <path d="M20 21v-2a4 4 0 0 0-4-4H8a4 4 0 0 0-4 4v2"></path>
                                                        <circle cx="12" cy="7" r="4"></circle>
                                                    </svg>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>

                                <div class="form-group row mb-1">
                                    <label style="font-size:80%" class="control-label col-sm-4 col-form-label text-left text-sm-left" for="txtterminal">Password</label>
                                    <div class="col-sm-12">
                                        @Html.PasswordFor(m => m.Password, new { @placeholder = "Password", @class = "form-control", data_toggle = "password", @required = "required" })
                                    </div>
                                </div>

                                <div class="col-12 mt-4 p-0">
                                    <button type="submit" class="btn btn-primary btn-block">Sign In</button>
                                </div>
                            }
                        </div>
                    <!-- /.login-card-body -->
                </div>
        </div>
    </div>
